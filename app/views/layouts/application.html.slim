doctype html
html
  head
    - if @title.nil?
      title Spectre
    - else
      title #{@title} | Spectre

    meta charset="utf-8"
    meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  body

    nav.sidebar.bg-dark
      p.h5.text-light.font-weight-normal.my-4.ml-3.d-flex.align-items-center
        = octicon 'eye', height: 32, class: 'mr-2'
        span.pl-1.text-no-select Spectre

      hr.bg-gray

      .nav.nav-pills.flex-column
        = sidebar_link url: dashboard_path,
                       icon: 'dashboard',
                       name: 'Actividad',
                       controller: 'dashboards'

        = sidebar_link url: workers_path,
                       icon: 'organization',
                       name: 'Trabajadores'

      hr.bg-gray

      .nav.nav-pills.flex-column
        = sidebar_link url: workers_path,
                       icon: 'tools',
                       name: 'Opciones'

        = sidebar_link url: workers_path,
                       icon: 'question',
                       name: 'Ayuda'

        = sidebar_link url: destroy_user_session_path,
                       icon: 'sign-out',
                       name: 'Salir',
                       method: :delete

    .main.sidebar-offset
      = render 'layouts/nav'
      .container-fluid
        == yield
