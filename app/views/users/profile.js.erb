$('#worker_profile').replaceWith("<%= j render 'workers/profile_form' %>")

<% unless @profile.errors.any? %>
  $('#worker_profile').append('<%= form_feedback_icon  %>')
  $('#worker_profile #form_feedback_icon').hide().fadeIn('fast')
  $('#worker_profile #form_feedback_icon').delay(5000).fadeOut('slow', function () {
    $(this).remove()
  })
<% end %>
